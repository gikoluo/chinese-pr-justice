---
// EventPhotos Section component (EN + ä¸­æ–‡)
import { eventPhotosSection } from '../i18n/strings';
interface Props {
    showNote?: boolean;
}

const { showNote = false } = Astro.props;
---

<section id="photos" class="photos-section">
    <div class="container">
        <h2><span class="lang-en">{eventPhotosSection.title.en}</span><span class="lang-zh">{eventPhotosSection.title.zh}</span><span class="lang-fr">{eventPhotosSection.title.fr}</span></h2>
        <p class="section-intro">Photos from our movement will be added here after the event.</p>

        <div class="photos-grid">
            <div class="photo-placeholder">
                <img src="/images/13979.jpg" alt="Community gathering" />
                <p>Preparing for the march</p>
            </div>

            <div class="photo-placeholder">
                <img src="/images/14692.jpg" alt="Supporters" />
                <p>United for justice</p>
            </div>

            <div class="photo-placeholder">
                <img src="/images/hero-abstract-solidarity.jpg" alt="Silhouettes of people standing in solidarity" />
                <p>Standing together for justice</p>
            </div>

            <div class="photo-placeholder">
                <img src="/images/abstract-waiting-hourglass.jpg" alt="Golden hourglass representing years of waiting" />
                <p>40+ months and counting</p>
            </div>

            <div class="photo-placeholder">
                <img src="/images/abstract-parliament-hill.jpg" alt="Parliament Hill silhouette with golden sunrise" />
                <p>Procession to Parliament Hill</p>
            </div>

            <div class="photo-placeholder">
                <div class="photo-empty">
                    <span>ðŸ“·</span>
                    <p>Event photos coming soon</p>
                </div>
            </div>
        </div>

        {showNote && (
            <div class="photo-note">
                <p><strong>Note:</strong> To add more photos after the event, simply place image files in the website folder and update the HTML file with the new image filenames.</p>
            </div>
        )}
    </div>
</section>

<style>
    .photos-section {
        background: var(--bg-light);
    }

    .photos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.25rem;
    }

    .photo-placeholder {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .photo-placeholder img {
        width: 100%;
        height: 220px;
        object-fit: cover;
    }

    .photo-placeholder p {
        padding: 0.75rem;
        text-align: center;
        color: var(--text-light);
        font-size: 0.9375rem;
    }

    .photo-empty {
        height: 220px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: var(--bg-light);
    }

    .photo-empty span {
        font-size: 3.5rem;
        margin-bottom: 0.75rem;
        opacity: 0.25;
    }

    .photo-note {
        margin-top: 1.5rem;
        padding: 1rem;
        background: white;
        border-radius: 8px;
        text-align: center;
        font-size: 0.875rem;
        color: var(--text-light);
    }
</style>
