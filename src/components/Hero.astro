---
// Hero Section - image background, banner panel left, stat card right
---

<section class="hero">
    <img
        src="/images/hero2-bg-feb-9.jpg"
        alt=""
        class="hero-bg"
        loading="eager"
    />
    <div class="hero-overlay"></div>

    <div class="hero-inner">
        <!-- Row: DEMAND block and 40+ block (same height, aligned top/bottom) -->
        <div class="hero-columns">
            <div class="hero-left">
                <div class="hero-banner">
                    <p class="banner-line-1">WE DEMAND A TIMELY DECISION</p>
                    <p class="banner-line-2"><span class="banner-delayed">DELAYED</span> BY IRCC</p>
                    <hr class="banner-rule" />
                    <p class="banner-demands">
                        <span>REASONABLE TIMELINES</span>
                        <span class="banner-sep" aria-hidden="true">||</span>
                        <span>PROCEDURAL FAIRNESS</span>
                    </p>
                    <p class="banner-demands banner-fr">
                        <span>Délais raisonnables</span>
                        <span class="banner-sep" aria-hidden="true">|</span>
                        <span>Équité procédurale</span>
                    </p>
                    <p class="banner-demands banner-zh">
                        <span>明确时限</span>
                        <span class="banner-sep" aria-hidden="true">|</span>
                        <span>程序公平</span>
                    </p>
                </div>
            </div>
            <div class="hero-right">
                <div class="stat-card">
                    <div class="stat-red">
                        <span class="stat-number">40+</span>
                    </div>
                    <div class="stat-white">
                        <span>MONTHS</span>
                        <span>WAITING FOR</span>
                        <span>IRCC RESPONSE</span>
                    </div>
                    <div class="stat-black">
                        <span>NO TIMELINES</span>
                        <span>NO RESULTS</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dedicated line below: event title + timeline + Event Details link -->
        <div class="hero-event">
            <h2 class="hero-event-title">Procession to Parliament Hill</h2>
            <div class="hero-event-details">
                <span>Friday, March 13, 2026</span>
                <span class="hero-event-dot" aria-hidden="true">·</span>
                <span>8:30 AM – 4:30 PM</span>
                <span class="hero-event-dot" aria-hidden="true">·</span>
                <span>Ottawa, Ontario</span>
            </div>
            <a href="/event" class="hero-event-link">Event Details</a>
        </div>

        <div class="cta-buttons">
            <a href="/join" class="btn-cta">Join Our Movement</a>
        </div>
    </div>
</section>

<style>
    /* ── Section ── */
    .hero {
        position: relative;
        min-height: 75vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    /* ── Background image ── */
    .hero-bg {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        z-index: 0;
    }

    /* ── Overlay ── */
    .hero-overlay {
        position: absolute;
        inset: 0;
        z-index: 1;
        background: linear-gradient(
            135deg,
            rgba(15, 26, 67, 0.84) 0%,
            rgba(15, 26, 67, 0.68) 50%,
            rgba(15, 26, 67, 0.50) 100%
        );
    }

    /* ── Content wrapper ── */
    .hero-inner {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 3.5rem 2rem;
    }

    /* ── Two-column layout: DEMAND and 40+ same height, top/bottom aligned ── */
    .hero-columns {
        display: flex;
        align-items: stretch;
        gap: 3rem;
    }

    .hero-left {
        flex: 1;
        min-width: 0;
        display: flex;
    }

    .hero-banner {
        flex: 1;
        display: flex;
        flex-direction: column;
        padding: 2rem 2.25rem;
        background: rgba(245, 240, 230, 0.97);
        color: var(--text-dark);
        border-radius: 6px;
        box-shadow: 0 6px 32px rgba(0, 0, 0, 0.3);
    }

    .hero-right {
        flex-shrink: 0;
        display: flex;
    }

    .banner-line-1 {
        margin: 0;
        font-size: clamp(1.35rem, 3vw, 1.85rem);
        font-weight: 800;
        letter-spacing: 0.04em;
        color: var(--text-dark);
        line-height: 1.2;
        text-transform: uppercase;
    }

    .banner-line-2 {
        margin: 0.3rem 0 0 0;
        font-size: clamp(2rem, 4.5vw, 3rem);
        font-weight: 800;
        letter-spacing: 0.02em;
        color: var(--text-dark);
        line-height: 1.1;
    }

    .banner-delayed {
        color: var(--red);
        font-style: italic;
    }

    .banner-rule {
        margin: 0.75rem 0 0.6rem 0;
        border: none;
        height: 3px;
        background: var(--red);
    }

    .banner-demands {
        margin: 0;
        font-size: 1.0625rem;
        font-weight: 700;
        color: var(--text-dark);
        letter-spacing: 0.02em;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .banner-demands .banner-sep {
        color: var(--red);
        font-weight: 800;
        font-size: 1rem;
    }

    .banner-fr {
        font-size: 0.9375rem;
        font-weight: 600;
        margin-top: 0.2rem;
    }

    .banner-zh {
        font-size: 1.0625rem;
        font-weight: 700;
        margin-top: 0.25rem;
        letter-spacing: 0.05em;
    }

    /* ── Event block: dedicated line below DEMAND + 40+, enlarged & highlighted ── */
    .hero-event {
        margin-top: 1.75rem;
        margin-bottom: 1.25rem;
        padding: 1.25rem 1.5rem;
        background: rgba(255, 255, 255, 0.12);
        border: 1px solid rgba(255, 255, 255, 0.25);
        border-radius: 8px;
        width: 100%;
    }

    .hero-event-title {
        font-size: clamp(1.5rem, 4vw, 2.25rem);
        font-weight: 800;
        color: #fff;
        margin: 0 0 0.5rem 0;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.4);
        letter-spacing: 0.02em;
    }

    .hero-event-details {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.35rem;
        font-size: clamp(1rem, 2vw, 1.125rem);
        font-weight: 600;
        color: rgba(255, 255, 255, 0.95);
    }

    .hero-event-dot {
        opacity: 0.7;
        margin: 0 0.2rem;
    }

    .hero-event-link {
        display: inline-block;
        margin-top: 0.75rem;
        padding: 0.5rem 1rem;
        font-size: 0.9375rem;
        font-weight: 600;
        color: #fff;
        border: 2px solid rgba(255, 255, 255, 0.85);
        border-radius: 4px;
        text-decoration: none;
        transition: background 0.3s, color 0.3s, border-color 0.3s;
    }

    .hero-event-link:hover {
        background: #fff;
        color: var(--text-dark);
        border-color: #fff;
    }

    /* ── CTA buttons ── */
    .cta-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-cta {
        display: inline-block;
        text-decoration: none;
        background: var(--red);
        color: #fff;
        padding: 0.75rem 1.5rem;
        font-size: 0.9375rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 4px;
        transition: background 0.2s;
    }

    .btn-cta:hover {
        background: rgb(200, 20, 45);
    }

    .btn-outline {
        display: inline-block;
        text-decoration: none;
        background: transparent;
        color: #fff;
        border: 2px solid rgba(255, 255, 255, 0.85);
        padding: 0.75rem 1.5rem;
        font-size: 0.9375rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 4px;
        transition: background 0.3s, color 0.3s, border-color 0.3s;
    }

    .btn-outline:hover {
        background: #fff;
        color: var(--text-dark);
        border-color: #fff;
    }

    /* ── Stat card (pure HTML/CSS), stretches to same row height as banner ── */
    .stat-card {
        width: 240px;
        flex: 1;
        min-height: 0;
        border: 3px solid #111;
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 6px 28px rgba(0, 0, 0, 0.35);
        text-align: center;
        font-family: var(--font-body);
        display: flex;
        flex-direction: column;
    }

    .stat-red {
        background: var(--red);
        padding: 1.25rem 1rem;
    }

    .stat-number {
        display: block;
        font-size: 5rem;
        font-weight: 900;
        color: #fff;
        line-height: 1;
        letter-spacing: -0.03em;
    }

    .stat-white {
        flex: 1;
        background: #fff;
        color: #111;
        padding: 0.75rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
        justify-content: center;
    }

    .stat-white span {
        display: block;
        font-size: 0.95rem;
        font-weight: 800;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        line-height: 1.3;
    }

    .stat-black {
        background: #111;
        color: #fff;
        padding: 0.75rem 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
    }

    .stat-black span {
        display: block;
        font-size: 0.85rem;
        font-weight: 800;
        letter-spacing: 0.03em;
        text-transform: uppercase;
        line-height: 1.3;
    }

    /* ── Responsive ── */
    @media (max-width: 768px) {
        .hero {
            min-height: auto;
        }

        .hero-inner {
            padding: 3rem 1.25rem;
        }

        .hero-columns {
            flex-direction: column;
            gap: 2rem;
            align-items: stretch;
        }

        .hero-right {
            display: flex;
            justify-content: center;
        }

        .stat-card {
            width: 200px;
        }

        .stat-number {
            font-size: 3.5rem;
        }

        .hero-banner {
            padding: 1.5rem 1.5rem;
        }

        .banner-line-1 {
            font-size: 1.1rem;
        }

        .banner-line-2 {
            font-size: 1.5rem;
        }

        .banner-demands {
            font-size: 0.875rem;
        }

        .banner-fr {
            font-size: 0.8125rem;
        }

        .banner-zh {
            font-size: 0.9375rem;
        }

        .hero-event {
            margin-top: 1.5rem;
            padding: 1rem 1.25rem;
        }

        .hero-event-title {
            font-size: 1.35rem;
        }

        .hero-event-details {
            font-size: 0.9375rem;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
