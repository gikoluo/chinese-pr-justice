      <div class="event-cta-box">
        <h3><span class="lang-en">{eventPage.ctaTitle.en}</span><span class="lang-zh">{eventPage.ctaTitle.zh}</span><span class="lang-fr">{eventPage.ctaTitle.fr}</span></h3>
        <p><span class="lang-en">{eventPage.ctaText.en}</span><span class="lang-zh">{eventPage.ctaText.zh}</span><span class="lang-fr">{eventPage.ctaText.fr}</span></p>
        <div class="event-cta-buttons">
          <a href="/join" class="btn-cta btn-flip">
            <span class="btn-text-block">
              <span class="btn-text-wrapper">
                <span class="hover-out-text"><span class="lang-en">{eventPage.joinCampaign.en}</span><span class="lang-zh">{eventPage.joinCampaign.zh}</span><span class="lang-fr">{eventPage.joinCampaign.fr}</span></span>
                <span class="hover-in-text"><span class="lang-en">{eventPage.joinCampaign.en}</span><span class="lang-zh">{eventPage.joinCampaign.zh}</span><span class="lang-fr">{eventPage.joinCampaign.fr}</span></span>
              </span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <EventPhotos />
</BaseLayout>

<style>
  /* Event Hero Section */
  .event-hero {
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
                url('/images/hero-event-march-for-pr.jpg') center/cover no-repeat;
    padding: 6rem 1.5rem;
    text-align: center;
    color: white;
  }

  .event-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .event-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .event-hero p {
    font-size: 1.25rem;
    opacity: 0.95;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .event-hero {
      padding: 4rem 1rem;
    }

    .event-hero h1 {
      font-size: 1.75rem;
    }

    .event-hero p {
      font-size: 1rem;
    }
  }

  /* Event Section */
  .event-section {
    background: white;
  }

  /* Event Quick Info Bar */
  .event-quick-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 1.5rem 0;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .quick-info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 1.5rem;
  }

  .quick-info-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1.5px solid rgba(240, 39, 39, 0.5);
    color: var(--red);
    flex-shrink: 0;
  }

  .quick-info-icon svg {
    width: 16px;
    height: 16px;
  }

  .quick-info-text {
    color: var(--text-dark);
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .quick-info-divider {
    width: 1px;
    height: 24px;
    background: #e5e7eb;
  }

  /* Glance Cards */
  .glance-card {
    background-color: rgba(240, 39, 39, 0.05);
    border: 1px solid rgba(240, 39, 39, 0.5);
    padding: 20px 60px 40px 40px;
    margin-bottom: 1.5rem;
  }

  .glance-card h4 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-dark);
  }

  .glance-card ul {
    list-style: disc;
    padding-left: 1.25rem;
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .glance-card li {
    margin-bottom: 0.375rem;
  }

  .glance-card li:last-child {
    margin-bottom: 0;
  }

  /* Schedule: show only the table for current global lang (data-lang on <html>) */
  #schedule-zh,
  #schedule-fr {
    display: none !important;
  }
  :global(html[data-lang="zh"]) #schedule-en,
  :global(html[data-lang="zh"]) #schedule-fr {
    display: none !important;
  }
  :global(html[data-lang="zh"]) #schedule-zh {
    display: block !important;
  }
  :global(html[data-lang="fr"]) #schedule-en,
  :global(html[data-lang="fr"]) #schedule-zh {
