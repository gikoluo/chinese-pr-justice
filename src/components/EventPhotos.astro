import { eventPhotosSection } from '../i18n/strings';
---

<section id="photos" class="photos-section">
    <div class="container">
        <h2><span class="lang-en">{eventPhotosSection.title.en}</span><span class="lang-zh">{eventPhotosSection.title.zh}</span><span class="lang-fr">{eventPhotosSection.title.fr}</span></h2>
        <p class="section-intro"><span class="lang-en">{eventPhotosSection.intro.en}</span><span class="lang-zh">{eventPhotosSection.intro.zh}</span><span class="lang-fr">{eventPhotosSection.intro.fr}</span></p>

        <div class="photos-waiting">
            <span class="photos-waiting-icon" aria-hidden="true">ðŸ“·</span>
            <p class="photos-waiting-text"><span class="lang-en">{eventPhotosSection.waitingMessage.en}</span><span class="lang-zh">{eventPhotosSection.waitingMessage.zh}</span><span class="lang-fr">{eventPhotosSection.waitingMessage.fr}</span></p>
