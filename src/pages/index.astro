---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import OurStories from '../components/OurStories.astro';
import EventPhotos from '../components/EventPhotos.astro';
import { declarationSection, declarationListLabels, demandsSection, demandTitles, demandBodies } from '../i18n/strings';
---

<BaseLayout title="Justice for Chinese PR Applicants - End Unfair Security Screening Delays">
    <Hero />

    <!-- Justice Declaration Section -->
    <section id="declaration" class="declaration-section">
        <div class="container">
            <h2><span class="lang-en">{declarationSection.title.en}</span><span class="lang-zh">{declarationSection.title.zh}</span><span class="lang-fr">{declarationSection.title.fr}</span></h2>
            <div class="declaration-content">
                <div class="declaration-intro">
                    <h3><span class="lang-en">{declarationSection.introTitle.en}</span><span class="lang-zh">{declarationSection.introTitle.zh}</span><span class="lang-fr">{declarationSection.introTitle.fr}</span></h3>
                    <p>
                        <span class="lang-en">{declarationSection.introParagraph.en}</span>
                        <span class="lang-zh">{declarationSection.introParagraph.zh}</span>
                        <span class="lang-fr">{declarationSection.introParagraph.fr}</span>
                    </p>
                </div>
                <h3 class="declaration-subtitle"><span class="lang-en">{declarationSection.declareThat.en}</span><span class="lang-zh">{declarationSection.declareThat.zh}</span><span class="lang-fr">{declarationSection.declareThat.fr}</span></h3>
                <ul class="declaration-list declaration-grid">
                    <li>
                        <span class="lang-en"><strong>{declarationListLabels.equality.en}</strong> {declarationSection.declareEquality.en}</span>
                        <span class="lang-zh"><strong>{declarationListLabels.equality.zh}</strong>{declarationSection.declareEquality.zh}</span>
                        <span class="lang-fr"><strong>{declarationListLabels.equality.fr}</strong> {declarationSection.declareEquality.fr}</span>
                    </li>
                    <li>
                        <span class="lang-en"><strong>{declarationListLabels.transparency.en}</strong> {declarationSection.declareTransparency.en}</span>
                        <span class="lang-zh"><strong>{declarationListLabels.transparency.zh}</strong>{declarationSection.declareTransparency.zh}</span>
                        <span class="lang-fr"><strong>{declarationListLabels.transparency.fr}</strong> {declarationSection.declareTransparency.fr}</span>
                    </li>
                    <li>
                        <span class="lang-en"><strong>{declarationListLabels.fairness.en}</strong> {declarationSection.declareFairness.en}</span>
                        <span class="lang-zh"><strong>{declarationListLabels.fairness.zh}</strong>{declarationSection.declareFairness.zh}</span>
                        <span class="lang-fr"><strong>{declarationListLabels.fairness.fr}</strong> {declarationSection.declareFairness.fr}</span>
                    </li>
                    <li>
                        <span class="lang-en"><strong>{declarationListLabels.accountability.en}</strong> {declarationSection.declareAccountability.en}</span>
                        <span class="lang-zh"><strong>{declarationListLabels.accountability.zh}</strong>{declarationSection.declareAccountability.zh}</span>
                        <span class="lang-fr"><strong>{declarationListLabels.accountability.fr}</strong> {declarationSection.declareAccountability.fr}</span>
                    </li>
                    <li>
                        <span class="lang-en"><strong>{declarationListLabels.humanDignity.en}</strong> {declarationSection.declareHumanDignity.en}</span>
                        <span class="lang-zh"><strong>{declarationListLabels.humanDignity.zh}</strong>{declarationSection.declareHumanDignity.zh}</span>
                        <span class="lang-fr"><strong>{declarationListLabels.humanDignity.fr}</strong> {declarationSection.declareHumanDignity.fr}</span>
                    </li>
                </ul>
                <h3 class="declaration-subtitle"><span class="lang-en">{declarationSection.humanCost.en}</span><span class="lang-zh">{declarationSection.humanCost.zh}</span><span class="lang-fr">{declarationSection.humanCost.fr}</span></h3>
                <p class="declaration-impact-intro"><span class="lang-en">{declarationSection.impactIntro.en}</span><span class="lang-zh">{declarationSection.impactIntro.zh}</span><span class="lang-fr">{declarationSection.impactIntro.fr}</span></p>
                <ul class="impact-list impact-grid">
                    <li><span class="lang-en">{declarationSection.impactTuition.en}</span><span class="lang-zh">{declarationSection.impactTuition.zh}</span><span class="lang-fr">{declarationSection.impactTuition.fr}</span></li>
                    <li><span class="lang-en">{declarationSection.impactReunite.en}</span><span class="lang-zh">{declarationSection.impactReunite.zh}</span><span class="lang-fr">{declarationSection.impactReunite.fr}</span></li>
                    <li><span class="lang-en">{declarationSection.impactCareers.en}</span><span class="lang-zh">{declarationSection.impactCareers.zh}</span><span class="lang-fr">{declarationSection.impactCareers.fr}</span></li>
                    <li><span class="lang-en">{declarationSection.impactMentalHealth.en}</span><span class="lang-zh">{declarationSection.impactMentalHealth.zh}</span><span class="lang-fr">{declarationSection.impactMentalHealth.fr}</span></li>
                    <li><span class="lang-en">{declarationSection.impactWorkPermits.en}</span><span class="lang-zh">{declarationSection.impactWorkPermits.zh}</span><span class="lang-fr">{declarationSection.impactWorkPermits.fr}</span></li>
                    <li><span class="lang-en">{declarationSection.impactMedicalExams.en}</span><span class="lang-zh">{declarationSection.impactMedicalExams.zh}</span><span class="lang-fr">{declarationSection.impactMedicalExams.fr}</span></li>
                </ul>
                <p class="declaration-conclusion"><strong><span class="lang-en">{declarationSection.conclusion.en}</span><span class="lang-zh">{declarationSection.conclusion.zh}</span><span class="lang-fr">{declarationSection.conclusion.fr}</span></strong></p>
            </div>
        </div>
    </section>

    <!-- Calling For / Demands Section -->
    <section id="demands" class="demands-section">
        <div class="container">
            <h2><span class="lang-en">{demandsSection.title.en}</span><span class="lang-zh">{demandsSection.title.zh}</span><span class="lang-fr">{demandsSection.title.fr}</span></h2>
            <p class="section-intro"><span class="lang-en">{demandsSection.intro.en}</span><span class="lang-zh">{demandsSection.intro.zh}</span><span class="lang-fr">{demandsSection.intro.fr}</span></p>

            <div class="demands-grid">
                <div class="demand-card">
                    <div class="demand-number">1</div>
                    <h3><span class="lang-en">{demandTitles.immediate.en}</span><span class="lang-zh">{demandTitles.immediate.zh}</span><span class="lang-fr">{demandTitles.immediate.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.immediate.en}</span><span class="lang-zh">{demandBodies.immediate.zh}</span><span class="lang-fr">{demandBodies.immediate.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">2</div>
                    <h3><span class="lang-en">{demandTitles.equal.en}</span><span class="lang-zh">{demandTitles.equal.zh}</span><span class="lang-fr">{demandTitles.equal.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.equal.en}</span><span class="lang-zh">{demandBodies.equal.zh}</span><span class="lang-fr">{demandBodies.equal.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">3</div>
                    <h3><span class="lang-en">{demandTitles.transparency.en}</span><span class="lang-zh">{demandTitles.transparency.zh}</span><span class="lang-fr">{demandTitles.transparency.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.transparency.en}</span><span class="lang-zh">{demandBodies.transparency.zh}</span><span class="lang-fr">{demandBodies.transparency.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">4</div>
                    <h3><span class="lang-en">{demandTitles.accountability.en}</span><span class="lang-zh">{demandTitles.accountability.zh}</span><span class="lang-fr">{demandTitles.accountability.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.accountability.en}</span><span class="lang-zh">{demandBodies.accountability.zh}</span><span class="lang-fr">{demandBodies.accountability.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">5</div>
                    <h3><span class="lang-en">{demandTitles.humanitarian.en}</span><span class="lang-zh">{demandTitles.humanitarian.zh}</span><span class="lang-fr">{demandTitles.humanitarian.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.humanitarian.en}</span><span class="lang-zh">{demandBodies.humanitarian.zh}</span><span class="lang-fr">{demandBodies.humanitarian.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">6</div>
                    <h3><span class="lang-en">{demandTitles.temporary.en}</span><span class="lang-zh">{demandTitles.temporary.zh}</span><span class="lang-fr">{demandTitles.temporary.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.temporary.en}</span><span class="lang-zh">{demandBodies.temporary.zh}</span><span class="lang-fr">{demandBodies.temporary.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">7</div>
                    <h3><span class="lang-en">{demandTitles.mandamus.en}</span><span class="lang-zh">{demandTitles.mandamus.zh}</span><span class="lang-fr">{demandTitles.mandamus.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.mandamus.en}</span><span class="lang-zh">{demandBodies.mandamus.zh}</span><span class="lang-fr">{demandBodies.mandamus.fr}</span></p>
                </div>

                <div class="demand-card">
                    <div class="demand-number">8</div>
                    <h3><span class="lang-en">{demandTitles.apology.en}</span><span class="lang-zh">{demandTitles.apology.zh}</span><span class="lang-fr">{demandTitles.apology.fr}</span></h3>
                    <p><span class="lang-en">{demandBodies.apology.en}</span><span class="lang-zh">{demandBodies.apology.zh}</span><span class="lang-fr">{demandBodies.apology.fr}</span></p>
                </div>
            </div>

            <div class="demands-cta">
                <h3><span class="lang-en">{demandsSection.supportTitle.en}</span><span class="lang-zh">{demandsSection.supportTitle.zh}</span><span class="lang-fr">{demandsSection.supportTitle.fr}</span></h3>
                <p><span class="lang-en">{demandsSection.supportDesc.en}</span><span class="lang-zh">{demandsSection.supportDesc.zh}</span><span class="lang-fr">{demandsSection.supportDesc.fr}</span></p>
                <a href="/join" class="btn btn-primary-large"><span class="lang-en">{demandsSection.joinMovement.en}</span><span class="lang-zh">{demandsSection.joinMovement.zh}</span><span class="lang-fr">{demandsSection.joinMovement.fr}</span></a>
            </div>
        </div>
    </section>

    <OurStories />

    <EventPhotos showNote={true} />
</BaseLayout>
