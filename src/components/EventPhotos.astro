<style>
    .photos-section {
        background: var(--bg-light);
    }

    .photos-waiting {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        padding: 2rem;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    .photos-waiting-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.4;
    }

    .photos-waiting-text {
        max-width: 520px;
        margin: 0;
        color: var(--text-light);
        font-size: 1rem;
        line-height: 1.6;
    }
</style>
