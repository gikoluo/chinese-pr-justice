---
import BaseLayout from "../layouts/BaseLayout.astro";
import EventPhotos from "../components/EventPhotos.astro";
---

<BaseLayout
  title="Event - Procession to Parliament Hill | Justice for Chinese PR Applicants"
>
  <!-- Event Section -->
  <section id="event" class="event-section">
    <div class="container">
      <h2>Procession to Parliament Hill</h2>
      <p class="section-intro">
        Join us as we march for justice and demand action from the Canadian
        government.
      </p>

      <div class="event-banner">
        <h3>March for PR Justice</h3>
        <p class="event-tagline">
          End Discriminatory Security Screening Delays
        </p>
      </div>

      <div class="event-quick-info">
        <div class="quick-info-item">
          <span class="quick-info-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><rect x="3" y="4" width="18" height="18" rx="2" ry="2"
              ></rect><line x1="16" y1="2" x2="16" y2="6"></line><line
                x1="8"
                y1="2"
                x2="8"
                y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg
            >
          </span>
          <span class="quick-info-text">Friday, March 13, 2026</span>
        </div>
        <div class="quick-info-divider"></div>
        <div class="quick-info-item">
          <span class="quick-info-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><circle cx="12" cy="12" r="10"></circle><polyline
                points="12 6 12 12 16 14"></polyline></svg
            >
          </span>
          <span class="quick-info-text">8:30 AM – 4:30 PM</span>
        </div>
        <div class="quick-info-divider"></div>
        <div class="quick-info-item">
          <span class="quick-info-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
              ></path><circle cx="12" cy="10" r="3"></circle></svg
            >
          </span>
          <span class="quick-info-text">Parliament Hill, Ottawa, Ontario</span>
        </div>
      </div>

      <div class="glance-card">
        <h4>What to Bring</h4>
        <ul>
          <li>Signs or banners (approved — we'll provide some)</li>
          <li>Flyers (approved — we'll provide printouts)</li>
          <li>Warm clothing (March in Ottawa — dress for cold)</li>
          <li>Water and snacks</li>
          <li>Your CBSA/GCMS notes (optional, for media)</li>
          <li>A copy of your story (for journalists)</li>
          <li>Positive energy and determination</li>
        </ul>
      </div>

      <div class="glance-card">
        <h4>Important Guidelines (Per Permit)</h4>
        <ul>
          <li>
            <strong>Peaceful & Respectful:</strong> This is a peaceful, permitted
            demonstration
          </li>
          <li>
            <strong>Keep Sidewalks Clear:</strong> The main sidewalk must remain unimpeded
            for Parliamentarians and the public
          </li>
          <li>
            <strong>No Fundraising:</strong> No fundraising activities on Parliament
            Hill
          </li>
          <li>
            <strong>No Structures:</strong> No props, chairs, or tables — signs, banners,
            and flyers only
          </li>
          <li>
            <strong>Clean Up:</strong> Our group is responsible for cleaning the area
            after the event
          </li>
          <li>
            <strong>Be Flexible:</strong> Due to construction, we may be asked to
            relocate — follow all instructions
          </li>
          <li>
            <strong>Media Ready:</strong> Be prepared to share your story with press
          </li>
        </ul>
      </div>

      <!-- Schedule Tabs -->
      <div class="schedule-tabs">
        <button class="schedule-tab active" data-tab="en">Event Schedule</button>
        <button class="schedule-tab" data-tab="zh">活动日程</button>
      </div>

      <!-- English Schedule -->
      <div class="schedule-content glance-card" id="schedule-en">
        <table class="schedule-table">
          <thead>
            <tr>
              <th>Time</th>
              <th>Activity</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>8:30–9:00</td>
              <td>Setup</td>
              <td>Volunteers arrive for setup, equipment testing</td>
            </tr>
            <tr>
              <td>9:00–9:30</td>
              <td>Gathering</td>
              <td>Sign-in, assembly, grouping, informal welcome (Chinese), brief overview of schedule and guidelines</td>
            </tr>
            <tr>
              <td>9:30–10:00</td>
              <td>Opening Ceremony<br/>Rally Goals</td>
              <td>Formal opening remarks (English, French)<br/>Explain rally goals: who we are, why we're here, our demands</td>
            </tr>
            <tr>
              <td>10:00–11:00</td>
              <td>Personal Stories<br/>(3–5 speakers)</td>
              <td>
                <ul>
                  <li>Share prolonged cases and their impact on individuals and families</li>
                  <li>Focus on missed opportunities and psychological stress</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>11:00–11:30</td>
              <td>Silent Protest</td>
              <td>Two-minute collective silence to express endless waiting and abandonment<br/>Display posters and banners</td>
            </tr>
            <tr class="highlight-row">
              <td>11:30–12:00<br/><span class="media-note">Peak Media</span></td>
              <td>Restate Rally Goals</td>
              <td>Reiterate rally goals (English, French): who we are, why we're here, our demands</td>
            </tr>
            <tr class="highlight-row">
              <td>12:00–13:00<br/><span class="media-note">Peak Media</span></td>
              <td>Personal Stories<br/>(3–5 speakers)</td>
              <td>
                <ul>
                  <li>Share prolonged cases and their impact on individuals and families</li>
                  <li>Focus on missed opportunities and psychological stress</li>
                </ul>
              </td>
            </tr>
            <tr class="highlight-row">
              <td>13:00–14:00<br/><span class="media-note">Peak Media</span></td>
              <td>Restate Rally Goals</td>
              <td>Reiterate rally goals (English, French): who we are, why we're here, our demands<br/>Two versions, one round each in English and French</td>
            </tr>
            <tr>
              <td>14:00–15:00</td>
              <td>Stories & Interaction</td>
              <td>
                <ul>
                  <li>If MPs or media present: reiterate key messages with more stories</li>
                  <li>Emphasize unity and collective voice</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>15:00–15:30</td>
              <td>Media & Group Action</td>
              <td>
                <ul>
                  <li>Group photos and videos at Centennial Flame</li>
                  <li>Media coverage and social media sharing opportunities</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>15:30–16:00</td>
              <td>Silent Protest</td>
              <td>Display posters and banners</td>
            </tr>
            <tr>
              <td>16:00–16:30</td>
              <td>Closing Ceremony</td>
              <td>
                <ul>
                  <li>Closing remarks and summary of demands</li>
                  <li>Thank attendees</li>
                </ul>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Chinese Schedule -->
      <div class="schedule-content glance-card" id="schedule-zh" style="display: none;">
        <table class="schedule-table">
          <thead>
            <tr>
              <th>时间</th>
              <th>主要活动</th>
              <th>详情</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>8:30–9:00</td>
              <td>布展</td>
              <td>志愿者到场布展，现场机器调试</td>
            </tr>
            <tr>
              <td>9:00–9:30</td>
              <td>集合</td>
              <td>参与者签到，集合，分组，非正式欢迎致辞（中文），简述活动流程及注意事项</td>
            </tr>
            <tr>
              <td>9:30–10:00</td>
              <td>开幕致辞<br/>说明集会目标</td>
              <td>正式开幕致辞（英语、法语）<br/>说明集会目标：我们是谁，我们为什么在这里，我们的诉求</td>
            </tr>
            <tr>
              <td>10:00–11:00</td>
              <td>个人故事演讲<br/>（3–5人）</td>
              <td>
                <ul>
                  <li>讲述旷日持久的案件及其对个人和家庭的影响</li>
                  <li>重点关注错失的机会和心理压力</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>11:00–11:30</td>
              <td>静默抗议</td>
              <td>两分钟集体默哀，以表达无尽的等待和被遗弃的感觉<br/>展示相关海报和标语</td>
            </tr>
            <tr class="highlight-row">
              <td>11:30–12:00<br/><span class="media-note">媒体高度活跃</span></td>
              <td>重申集会目标</td>
              <td>再次说明集会目标（英语、法语）：我们是谁，我们为什么在这里，我们的诉求</td>
            </tr>
            <tr class="highlight-row">
              <td>12:00–13:00<br/><span class="media-note">媒体高度活跃</span></td>
              <td>个人故事演讲<br/>（3–5人）</td>
              <td>
                <ul>
                  <li>讲述旷日持久的案件及其对个人和家庭的影响</li>
                  <li>重点关注错失的机会和心理压力</li>
                </ul>
              </td>
            </tr>
            <tr class="highlight-row">
              <td>13:00–14:00<br/><span class="media-note">媒体高度活跃</span></td>
              <td>重申集会目标</td>
              <td>再次说明集会目标（英语、法语）：我们是谁，我们为什么在这里，我们的诉求<br/>共两版稿件，英法双语各一遍</td>
            </tr>
            <tr>
              <td>14:00–15:00</td>
              <td>故事延续与互动</td>
              <td>
                <ul>
                  <li>如有国会议员或媒体在场：重申关键信息并提供更多故事</li>
                  <li>强调团结和共同的声音</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>15:00–15:30</td>
              <td>媒体与集体行动</td>
              <td>
                <ul>
                  <li>在百年火炬前拍摄集体照和视频</li>
                  <li>媒体报道和社交媒体分享的机会</li>
                </ul>
              </td>
            </tr>
            <tr>
              <td>15:30–16:00</td>
              <td>静默抗议</td>
              <td>展示相关海报和标语</td>
            </tr>
            <tr>
              <td>16:00–16:30</td>
              <td>闭幕致辞</td>
              <td>
                <ul>
                  <li>闭幕致辞及诉求总结</li>
                  <li>感谢与会者</li>
                </ul>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <script>
        const tabs = document.querySelectorAll('.schedule-tab');
        const scheduleEn = document.getElementById('schedule-en');
        const scheduleZh = document.getElementById('schedule-zh');

        tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            if (tab.dataset.tab === 'en') {
              scheduleEn.style.display = 'block';
              scheduleZh.style.display = 'none';
            } else {
              scheduleEn.style.display = 'none';
              scheduleZh.style.display = 'block';
            }
          });
        });
      </script>

      <div class="event-cta-box">
        <h3>Will You Stand With Us?</h3>
        <p>
          Your presence matters. Every person who shows up sends a message that
          we will not accept discriminatory treatment.
        </p>
        <div class="event-cta-buttons">
          <a href="/join" class="btn-cta btn-flip">
            <span class="btn-text-block">
              <span class="btn-text-wrapper">
                <span class="hover-out-text">JOIN THE CAMPAIGN</span>
                <span class="hover-in-text">JOIN THE CAMPAIGN</span>
              </span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <EventPhotos />
</BaseLayout>

<style>
  /* Event Section */
  .event-section {
    background: white;
  }

  /* Event Quick Info Bar */
  .event-quick-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 1.5rem 0;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .quick-info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 1.5rem;
  }

  .quick-info-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1.5px solid rgba(240, 39, 39, 0.5);
    color: var(--red);
    flex-shrink: 0;
  }

  .quick-info-icon svg {
    width: 16px;
    height: 16px;
  }

  .quick-info-text {
    color: var(--text-dark);
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .quick-info-divider {
    width: 1px;
    height: 24px;
    background: #e5e7eb;
  }

  /* Glance Cards */
  .glance-card {
    background-color: rgba(240, 39, 39, 0.05);
    border: 1px solid rgba(240, 39, 39, 0.5);
    padding: 20px 60px 40px 40px;
    margin-bottom: 1.5rem;
  }

  .glance-card h4 {
    font-size: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-dark);
  }

  .glance-card ul {
    list-style: disc;
    padding-left: 1.25rem;
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .glance-card li {
    margin-bottom: 0.375rem;
  }

  .glance-card li:last-child {
    margin-bottom: 0;
  }

  /* Schedule Tabs */
  .schedule-tabs {
    display: flex;
    gap: 2rem;
    margin-bottom: 0;
  }

  .schedule-tab {
    background: none;
    border: none;
    font-size: 1.1em;
    font-weight: 500;
    color: var(--text-light);
    cursor: pointer;
    padding: 0.5rem 0;
    transition: color 0.2s;
  }

  .schedule-tab:hover {
    color: var(--text-dark);
  }

  .schedule-tab.active {
    color: var(--text-dark);
    text-decoration: underline;
    text-underline-offset: 4px;
    border-left: 1px solid rgba(240, 39, 39, 0.5);
    border-top: 1px solid rgba(240, 39, 39, 0.5);
    border-right: 1px solid rgba(240, 39, 39, 0.5);
    padding: 0.5rem 1rem;
  }

  /* Schedule Table */
  .schedule-content {
    overflow-x: auto;
  }

  .schedule-content.glance-card {
    padding: 20px;
  }

  .schedule-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9375rem;
  }

  .schedule-table th,
  .schedule-table td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(240, 39, 39, 0.2);
    vertical-align: top;
  }

  .schedule-table th {
    font-weight: 600;
    color: var(--text-dark);
    background: rgba(240, 39, 39, 0.08);
  }

  .schedule-table td:first-child {
    white-space: nowrap;
    font-weight: 500;
    min-width: 100px;
  }

  .schedule-table td:nth-child(2) {
    font-weight: 500;
    min-width: 140px;
  }

  .schedule-table ul {
    margin: 0;
    padding-left: 1.25rem;
    list-style: disc;
  }

  .schedule-table li {
    margin-bottom: 0.25rem;
  }

  .schedule-table li:last-child {
    margin-bottom: 0;
  }

  /* Override glance-card ul styling for schedule table - ensure consistent font */
  .schedule-content.glance-card ul {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: inherit;
  }

  .highlight-row {
    background: rgba(240, 39, 39, 0.08);
  }

  .media-note {
    display: inline-block;
    font-size: 0.75rem;
    color: var(--red);
    font-weight: 500;
    margin-top: 0.25rem;
  }

  .event-details-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .event-banner {
    background: linear-gradient(
      135deg,
      var(--primary-color),
      var(--primary-dark)
    );
    color: white;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .event-banner h3 {
    font-size: 1.75rem;
    margin-bottom: 0.375rem;
  }

  .event-tagline {
    font-size: 1.125rem;
    opacity: 0.95;
  }

  .event-info {
    background: var(--bg-light);
    padding: 1.5rem;
    border-radius: 8px;
  }

  .event-info-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .event-info-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .info-icon {
    font-size: 1.75rem;
  }

  .event-info-item strong {
    display: block;
    font-size: 1rem;
    margin-bottom: 0.375rem;
    color: var(--text-dark);
  }

  .event-info-item p {
    color: var(--text-light);
    margin-bottom: 0.25rem;
    font-size: 0.9375rem;
  }

  .info-note {
    font-size: 0.875rem;
    font-style: italic;
  }

  .event-info-item ul {
    list-style-position: inside;
    color: var(--text-light);
    font-size: 0.9375rem;
  }

  .event-agenda {
    margin-top: 1.5rem;
  }

  .event-agenda h4 {
    font-size: 1.375rem;
    margin-bottom: 1rem;
  }

  .agenda-item {
    display: flex;
    gap: 1.25rem;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: var(--bg-light);
    border-radius: 6px;
  }

  .agenda-time {
    font-weight: 700;
    color: var(--accent-color);
    min-width: 75px;
    font-size: 0.9375rem;
  }

  .agenda-content strong {
    display: block;
    margin-bottom: 0.25rem;
    font-size: 0.9375rem;
  }

  .agenda-content p {
    color: var(--text-light);
    font-size: 0.875rem;
  }

  .event-card {
    background: var(--bg-light);
    padding: 1.25rem;
    border-radius: 8px;
    margin-bottom: 1.25rem;
    border-top: 3px solid var(--primary-color);
  }

  .event-card h4 {
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
  }

  .event-card ul {
    list-style-position: inside;
    color: var(--text-light);
    font-size: 0.9375rem;
  }

  .event-card li {
    margin-bottom: 0.375rem;
  }

  .event-card .btn {
    margin-top: 0.75rem;
    width: 100%;
    text-align: center;
  }

  .event-cta-box {
    background: var(--bg-light);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .event-cta-box h3 {
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
  }

  .event-cta-box p {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .event-cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  /* CTA Button with Flip Animation */
  .btn-cta {
    background: rgb(229, 25, 55);
    color: #ffffff;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: background 0.2s;
  }

  .btn-cta:hover {
    background: rgb(200, 20, 45);
  }

  /* Flip animation */
  .btn-flip {
    display: inline-block;
    text-decoration: none;
  }

  .btn-text-block {
    display: block;
    overflow: hidden;
    height: 1.25em;
  }

  .btn-text-wrapper {
    display: block;
    transition: transform 0.3s ease;
  }

  .hover-out-text,
  .hover-in-text {
    display: block;
    height: 1.25em;
    line-height: 1.25;
  }

  .btn-flip:hover .btn-text-wrapper {
    transform: translateY(-50%);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .event-quick-info {
      flex-direction: column;
      gap: 1rem;
    }

    .quick-info-divider {
      display: none;
    }

    .quick-info-item {
      padding: 0;
    }

    .glance-card {
      padding: 20px 20px 30px 20px;
    }

    .event-details-grid {
      grid-template-columns: 1fr;
    }

    .event-cta-buttons {
      flex-direction: column;
    }

    /* Schedule responsive */
    .schedule-table {
      font-size: 0.8125rem;
    }

    .schedule-table th,
    .schedule-table td {
      padding: 0.5rem 0.5rem;
    }

    .schedule-table td:first-child {
      min-width: 70px;
    }

    .schedule-table td:nth-child(2) {
      min-width: 80px;
    }

    .schedule-content.glance-card {
      padding: 10px;
    }
  }
</style>
