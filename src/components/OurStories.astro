        margin-bottom: 0.5rem;
        font-size: 0.9375rem;
        color: #a0aec0;
    }

    .story-placeholder :global(.btn-secondary) {
        color: #e2e8f0;
        border-color: #718096;
    }

    .story-placeholder :global(.btn-secondary:hover) {
        background: #718096;
        color: white;
        border-color: #718096;
    }

    .stories-callout {
        position: relative;
        margin-top: 1.5rem;
        border-radius: 12px;
        overflow: hidden;
        padding: 3.5rem 2rem;
        text-align: center;

        background-color: var(--bg-stories-delay);
        background-image:
            linear-gradient(
                180deg,
                rgba(30, 40, 55, 0.82),
                rgba(30, 40, 55, 0.88)
            ),
            url('/images/Lives_On_Hold_Security_In_Progress_Banner_8K.jpg');
        background-repeat: no-repeat;
        background-position: center center;
        background-size: 100% 100%;
    }

    .stories-callout h3,
    .stories-callout p {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .stories-callout h3 {
        font-size: 1.75rem;
        margin-bottom: 0.75rem;
        color: var(--accent-color);
    }

    .stories-callout p {
        font-size: 1rem;
        line-height: 1.7;
        margin: 0 auto 0.75rem;
        color: #e2e8f0;
    }
</style>

<script>
    // Stats count-up: when section is in view, animate 0 → target (families + months)
    (function () {
        const el = document.querySelector('.stories-stats');
        if (!el) return;
        const targetCount = parseInt(el.getAttribute('data-count') || '0', 10);
        const targetMonths = parseInt(el.getAttribute('data-months') || '0', 10);
        const durationMs = 2800;
        const easeOutCubic = (t) => 1 - Math.pow(1 - t, 3);

        let done = false;
        const observer = new IntersectionObserver(
            (entries) => {
                if (done) return;
                const e = entries[0];
                if (!e?.isIntersecting) return;
                done = true;
                const countEls = el.querySelectorAll('.stats-count');
                const monthsEls = el.querySelectorAll('.stats-months');
                const start = performance.now();
                function tick(now) {
                    const elapsed = now - start;
                    const t = Math.min(elapsed / durationMs, 1);
                    const eased = easeOutCubic(t);
                    const curCount = Math.round(eased * targetCount);
                    const curMonths = Math.round(eased * targetMonths);
                    countEls.forEach((n) => { n.textContent = String(curCount); });
                    monthsEls.forEach((n) => { n.textContent = String(curMonths); });
                    if (t < 1) requestAnimationFrame(tick);
                }
                requestAnimationFrame(tick);
            },
            { threshold: 0.3, rootMargin: '0px' }
        );
        observer.observe(el);
    })();

    // Card click opens modal (BaseLayout); button toggles inline expand
    document.querySelectorAll('.story-toggle').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.stopPropagation();
            const card = btn.closest('.story-card');
            const content = card?.querySelector('.story-content-full');
            if (!content) return;
            const isExpanded = btn.getAttribute('aria-expanded') === 'true';
            btn.setAttribute('aria-expanded', String(!isExpanded));
            content.hidden = isExpanded;
            btn.textContent = isExpanded ? 'Read full story' : 'Show less';
        });
    });
</script>
